  <style name="Theme.Airtel.Splash" parent="NightAdjusted.Theme.Splash">
    <item name="android:windowSplashScreenBackground">@color/white</item>
    <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_logo</item>
    <item name="postSplashScreenTheme">@style/NightAdjusted.Theme.Splash</item>
  </style>
</resources>