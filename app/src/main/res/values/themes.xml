  <style name="NightAdjusted.Theme.AirtelTask" parent="Theme.Material3.Light.NoActionBar" />

  <style name="Theme.Airtel" parent="NightAdjusted.Theme.AirtelTask" />


  <style name="NightAdjusted.Theme.Splash" parent="Theme.Airtel">
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    <item name="android:windowTranslucentStatus">false</item>
